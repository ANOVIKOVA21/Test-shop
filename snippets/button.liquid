{%- doc -%}
  Intended for use in a block similar to the button block.

  @param {string} link - link to render
  @param {object} [block] - The block

  @example
  {% render 'button', link: '/collections/all' %}
{%- enddoc -%}

{% assign block_settings = block.settings %}

<a
  {% if link == blank %}
    role="link"
    aria-disabled="true"
  {% else %}
    href="{{ link }}"
  {% endif %}
  class="
    size-style
    {{ block_settings.style_class }}
    {{ block_settings.style_class }}--{{ block.id }}
  "
  style="{% render 'size-style', settings: block_settings %}"
  {%- if block_settings.open_in_new_tab -%}
    target="_blank"
    rel="noopener noreferrer"
  {%- endif -%}
  {{ block.shopify_attributes }}
>
  {{ block_settings.label }}
  {%- if block_settings.style_class == 'link' -%}
    <span class="svg-wrapper icon-arrow-diagonal">
      {{- 'icon-arrow-diagonal.svg' | inline_asset_content -}}
    </span>
  {% endif %}
</a>

{% stylesheet %}
  .link {
    text-transform: uppercase;
    text-decoration-color: currentcolor;
    text-decoration: none;
    .icon-arrow-diagonal,
    .icon-arrow-diagonal svg {
      width: 0.75rem;
      height: 0.75rem;
      transition: 0.3s ease;
    }
    &:hover {
      color: #a0a0a0;
      text-decoration-color: transparent;
      .icon-arrow-diagonal {
        transform: translate(4px, -4px);
      }
    }
  }
{% endstylesheet %}
