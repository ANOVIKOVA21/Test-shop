{% assign block_settings = block.settings %}
{% style %}
  .localization{
    padding-block-start: {{ block_settings.padding-block-start }}px;
      padding-block-end: {{ block_settings.padding-block-end }}px;
      width: {{ block_settings.width }};
      flex-direction:{{ block_settings.content_direction}}
  }
  @media screen and (max-width: 749px) {
      .localization {
        flex-direction:{{ block_settings.content_direction_mobile}};
        order:2
      }
    }
{% endstyle %}
<div
  class="localization"
  {{ block.shopify_attributes }}
>
  {% render 'localization-form',
    show_country: false,
    show_language: true,
    localization_style: 'dropdown',
    block_id: block.id
  %}
  {% render 'dropdown-localization',
    show_country: true,
    show_language: false,
    country_style: 'dropdown',
    localization_position: 'left'
  %}
</div>
{% stylesheet %}
  .localization {
    display: flex;
    justify-content: space-between;
    column-gap: clamp(1rem, 6vw, 3.75rem);
  }
{% endstylesheet %}
{% schema %}
{
  "name": "Localization",
  "tag": null,
  "blocks": [],
  "settings": [
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "options": [
        { "value": "100%", "label": "Full" },
        { "value": "auto", "label": "Auto" }
      ],
      "default": "auto"
    },
    {
      "type": "select",
      "id": "content_direction",
      "label": "t:settings.direction",
      "options": [
        {
          "value": "column",
          "label": "t:options.vertical"
        },
        {
          "value": "row",
          "label": "t:options.horizontal"
        }
      ],
      "default": "row"
    },
    {
      "type": "select",
      "id": "content_direction_mobile",
      "label": "Direction mobile",
      "options": [
        {
          "value": "column",
          "label": "t:options.vertical"
        },
        {
          "value": "row",
          "label": "t:options.horizontal"
        }
      ],
      "default": "column"
    }
  ],
  "presets": [
    {
      "name": "Localization",
      "category": "Other"
    }
  ]
}
{% endschema %}
